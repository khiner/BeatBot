<?xml version="1.0" encoding="utf-8"?>
<com.kh.beatbot.layout.page.MasterPage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.kh.beatbot.layout.page.MasterPageSelect
        android:id="@+id/masterPageSelect"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/levels"
            android:textColor="@color/text_selector" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/effects"
            android:textColor="@color/text_selector" />
    </com.kh.beatbot.layout.page.MasterPageSelect>

    <ViewFlipper
        android:id="@+id/masterFlipper"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/masterLevelsPage"
            layout="@layout/master_levels_page" />

        <include
            android:id="@+id/masterEffectsPage"
            layout="@layout/track_effects_page" />
    </ViewFlipper>

</com.kh.beatbot.layout.page.MasterPage>