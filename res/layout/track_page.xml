<?xml version="1.0" encoding="utf-8"?>
<com.kh.beatbot.layout.page.TrackPage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.kh.beatbot.layout.page.TrackPageSelect
        android:id="@+id/trackPageSelect"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <com.kh.beatbot.view.SquareImageView
            android:id="@+id/instrumentSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:src="@drawable/kick_icon" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src" >

            <TextView
                android:id="@+id/sampleSelect"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/select"
                android:textColor="@color/text_selector" />
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/levels"
            android:textColor="@color/text_selector" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/edit"
            android:textColor="@color/text_selector" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/effects"
            android:textColor="@color/text_selector" />
    </com.kh.beatbot.layout.page.TrackPageSelect>

    <ViewFlipper
        android:id="@+id/trackFlipper"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/trackPageSelect" >

        <include
            android:id="@+id/trackLevelsPage"
            layout="@layout/track_levels_page" />

        <include
            android:id="@+id/sampleEditPage"
            layout="@layout/sample_edit_page" />

        <include
            android:id="@+id/trackEffectsPage"
            layout="@layout/track_effects_page" />
    </ViewFlipper>

</com.kh.beatbot.layout.page.TrackPage>