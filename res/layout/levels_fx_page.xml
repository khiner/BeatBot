<?xml version="1.0" encoding="utf-8"?>
<com.kh.beatbot.layout.page.LevelsFXPage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    
        <ToggleButton
            android:id="@+id/trackVolumeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/volume_btn_src"
            android:checked="true"
            android:clickable="false"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/trackPanToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/pan_btn_src"
            android:clickable="false"
            android:layout_toRightOf="@+id/trackVolumeToggle"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/trackPitchToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/pitch_btn_src"
            android:clickable="false"
            android:layout_toRightOf="@+id/trackPanToggle"
            android:textOff=""
            android:textOn="" />

        <com.kh.beatbot.view.BBSeekbar
            android:id="@+id/trackLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/trackPitchToggle"
            android:layout_marginRight="6dp" />
        
    <TextView 
        android:id="@+id/effectsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:gravity="center"
        android:text="@string/effects" />
    
    <com.kh.beatbot.listenable.LabelListListenable
        android:id="@+id/effectList"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/effectsLabel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</com.kh.beatbot.layout.page.LevelsFXPage>