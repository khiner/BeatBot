<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <include
        android:id="@+id/leftControlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/left_control_buttons" />

    <include
        android:id="@+id/rightControlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        layout="@layout/right_control_buttons" />

    <!--
    <TextView
        android:id="@+id/thresholdLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/addTrack"
        android:layout_below="@+id/leftControlButtons"
        android:textSize="16dp"
        android:gravity="center"
        android:text="@string/threshold" />

    <com.kh.beatbot.view.ThresholdBarView
        android:id="@+id/thresholdBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/thresholdLabel"
        android:layout_toLeftOf="@+id/levelsLayout"
        android:layout_alignTop="@+id/thresholdLabel"
        android:layout_alignBottom="@+id/thresholdLabel" />
    -->

    <com.kh.beatbot.view.MidiView
        android:id="@+id/midiView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/addTrack"
        android:layout_below="@+id/rightControlButtons" />

    <ImageButton
        android:id="@+id/addTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trackPageSelect"
        android:background="@drawable/plus_icon_large"
        android:onClick="addTrack" />

    <LinearLayout
        android:id="@+id/masterLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addTrack"
        android:layout_alignTop="@+id/addTrack"
        android:layout_toRightOf="@+id/addTrack"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/masterVolumeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/volume_btn_src"
            android:checked="true"
            android:onClick="volume"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/masterPanToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pan_btn_src"
            android:onClick="pan"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/masterPitchToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pitch_btn_src"
            android:onClick="pitch"
            android:textOff=""
            android:textOn="" />

        <com.kh.beatbot.view.TronSeekbar
            android:id="@+id/masterLevelBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackPageSelect"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/trackFlipper"
        android:orientation="horizontal" >

        <com.kh.beatbot.view.SquareImageView
        	android:id="@+id/instrumentSelect"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:background="@drawable/page_select_src"
        	android:src="@drawable/kick_icon" />
		
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/page_select_src" > 
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/sampleSelect"
            android:textColor="@color/text_selector"
            android:text="@string/select"
            android:lines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true" />
		</LinearLayout>
		<TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/page_select_src"
            android:textColor="@color/text_selector"
            android:text="@string/levels" />
		
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/page_select_src"
            android:textColor="@color/text_selector"
            android:text="@string/edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/page_select_src"
            android:textColor="@color/text_selector"
            android:text="@string/effects" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/trackFlipper"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true" >

        <include
            android:id="@+id/sampleSelectPage"
            layout="@layout/track_sample_select" />

        <include
            android:id="@+id/levelsPage"
            layout="@layout/levels_edit" />
        
        <include
            android:id="@+id/sampleEditPage"
            layout="@layout/track_sample_edit" />

        <include
            android:id="@+id/effectsPage"
            layout="@layout/track_effects" />
    </ViewFlipper>

</RelativeLayout>