<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/controlButtons"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" >

        <include
            android:id="@+id/leftControlButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            layout="@layout/left_control_buttons" />

        <include
            android:id="@+id/rightControlButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            layout="@layout/right_control_buttons" />
    </RelativeLayout>

    <com.kh.beatbot.view.MidiView
        android:id="@+id/midiView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".5" />

    <com.kh.beatbot.layout.page.MainPageSelect
        android:id="@+id/mainPageSelect"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:orientation="horizontal" >

        <com.kh.beatbot.view.SquareImageButton
            android:id="@+id/addTrack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/plus_outline"
            android:onClick="addTrack" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/master"
            android:textColor="@color/text_selector" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/track"
            android:textColor="@color/text_selector" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/levels"
            android:textColor="@color/text_selector" />
        
    </com.kh.beatbot.layout.page.MainPageSelect>

    <ViewFlipper
        android:id="@+id/mainFlipper"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".3" >

        <include
            android:id="@+id/masterPage"
            layout="@layout/master_page" />
        
        <include
            android:id="@+id/trackPage"
            layout="@layout/track_page" />

        <include
            android:id="@+id/levelsPage"
            layout="@layout/levels_page" />
    </ViewFlipper>

</LinearLayout>