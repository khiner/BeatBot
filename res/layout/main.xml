<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/controlButtons"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" >

        <include
            android:id="@+id/leftControlButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            layout="@layout/left_control_buttons" />

        <include
            android:id="@+id/rightControlButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            layout="@layout/right_control_buttons" />
    </RelativeLayout>

    <com.kh.beatbot.view.MidiView
        android:id="@+id/midiView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".5" />

    <LinearLayout
        android:id="@+id/masterLevels"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal" >

        <com.kh.beatbot.view.SquareImageButton
            android:id="@+id/addTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_icon_large"
            android:onClick="addTrack" />

        <com.kh.beatbot.view.SquareToggle
            android:id="@+id/masterVolumeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/volume_btn_src"
            android:checked="true"
            android:onClick="volume"
            android:textOff=""
            android:textOn="" />

        <com.kh.beatbot.view.SquareToggle
            android:id="@+id/masterPanToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pan_btn_src"
            android:onClick="pan"
            android:textOff=""
            android:textOn="" />

        <com.kh.beatbot.view.SquareToggle
            android:id="@+id/masterPitchToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pitch_btn_src"
            android:onClick="pitch"
            android:textOff=""
            android:textOn="" />

        <com.kh.beatbot.view.BBSeekbar
            android:id="@+id/masterLevelBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp" />

        <com.kh.beatbot.view.SquareToggle
            android:id="@+id/levels"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-40dp"
            android:background="@drawable/levels_btn_src"
            android:contentDescription="@string/levels"
            android:onClick="levels"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <com.kh.beatbot.layout.page.TrackPageSelect
        android:id="@+id/trackPageSelect"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal" >

        <com.kh.beatbot.view.SquareImageView
            android:id="@+id/instrumentSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:src="@drawable/kick_icon" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src" >

            <TextView
                android:id="@+id/sampleSelect"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/select"
                android:textColor="@color/text_selector" />
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/levels"
            android:textColor="@color/text_selector" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/edit"
            android:textColor="@color/text_selector" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/page_select_src"
            android:text="@string/effects"
            android:textColor="@color/text_selector" />
    </com.kh.beatbot.layout.page.TrackPageSelect>

<ViewFlipper
    android:id="@+id/trackFlipper"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight=".2" >

    <include
        android:id="@+id/trackLevelsPage"
        layout="@layout/track_levels_page" />

    <include
        android:id="@+id/sampleEditPage"
        layout="@layout/sample_edit_page" />

    <include
        android:id="@+id/trackEffectsPage"
        layout="@layout/track_effects_page" />

</ViewFlipper>

</LinearLayout>